@prefix : <http://example.com/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

:PersonShape
    a sh:NodeShape ;
    sh:targetClass :Person ;
    sh:property [
        sh:path :hasParent ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:class :Parent ;
    ] ;
    sh:property [
        sh:path :hasChild ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:class :Child ;
    ] .

:ParentShape
    a sh:NodeShape ;
    sh:targetClass :Parent ;
    sh:property [
        sh:path :hasChild ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:class :Child ;
    ] .

:ChildShape
    a sh:NodeShape ;
    sh:targetClass :Child ;
    sh:property [
        sh:path :hasParent ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:class :Parent ;
    ] .
